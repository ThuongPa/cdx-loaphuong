# Database Configuration
MONGODB_URI=your-mongo-uri

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_URI=your-rabbitmq-uri

# Novu Configuration (Self-hosted)
NOVU_API_KEY=your-novu-api-key
NOVU_SECRET_KEY=your-novu-secret-key
NOVU_API_URL=your-novu-api-url
NOVU_APPLICATION_IDENTIFIER=your-novu-application-identifier

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=infor

# Auth Service Configuration
AUTH_SERVICE_URL=your-auth-service-url
AUTH_SERVICE_TIMEOUT=10000
AUTH_SERVICE_RETRIES=3

# CORS Configuration
CORS_ORIGIN=*

# Performance Configuration
MONGODB_MIN_CONNECTIONS=5
MONGODB_MAX_CONNECTIONS=20
REDIS_MIN_CONNECTIONS=5
REDIS_MAX_CONNECTIONS=20
RABBITMQ_MIN_CONNECTIONS=3
RABBITMQ_MAX_CONNECTIONS=10